{
    "compilerOptions": {
        "outDir": "./public/js/",
        "noImplicitAny": true,
        "module": "es2015",
        "target": "es5",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "lib": ["es2015", "dom"],
        "noUnusedLocals": true,
        "strictNullChecks": true
    },
    "include": ["src/client/**/*"],
    "exclude": ["node_modules"],
    "files": ["src/globals.d.ts"]
}
