{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "es2015",
        "target": "es5",
        "allowSyntheticDefaultImports": true,
        "lib": ["es2017"],
        "types": ["node", "express"],
        "noUnusedLocals": true,
        "strictNullChecks": true
    },
    "include": ["src/server/**/*"],
    "exclude": ["node_modules"]
}
